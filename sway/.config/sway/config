# Polkit for authentication 
exec_always /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Xwayland video bridge
# exec_always pkill -x xwaylandvideobridge; xwaylandvideobridge &
# exec_always sh -c 'pgrep -xu "$USER" xwaylandvideobridge >/dev/null || exec xwaylandvideobridge'
exec_always sh -c 'pkill -xu "$USER" -f xwaylandvideobridge; sleep 0.2; exec xwaylandvideobridge --no-window &'
# Not sure if working
exec_always xfce4-power-manager &

# Notifications
