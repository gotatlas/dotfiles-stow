exec_always env DOOMDIR=$HOME/.config/doom emacs --fg-daemon=doom --init-directory=$HOME/.config/doom-emacs

exec --no-startup-id swaymsg 'workspace 1; exec alacritty'
exec --no-startup-id swaymsg 'workspace 2; exec firefox'
exec --no-startup-id swaymsg 'workspace 5; exec discord'
